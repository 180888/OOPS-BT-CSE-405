#include <iostream>
using namespace std;
class Matrix
{
    int** array;
    int row;
    int col;
public:
	Matrix(int row, int col )
	{   this->row=row;
	    this->col=col;
	    array= new int* [row];
    for(int i=0;i<row;i++)
        {
        array[i]= new int [col];
        for(int j=0;j<col;j++)
        array[i][j]=7;
        }		
	}
    void set_matrix()
    {
        for(int i=0;i<row;i++)
        {
            for(int j=0;j<col;j++)
                cin>>array[i][j];
        }
    }
    void display()
    {
        for(int i=0;i<row;i++)
        {
            for(int j=0;j<col;j++)
            {
                cout<<array[i][j]<<"	";
            } cout<<endl;
        }
}
};

int main()
{ int m,n;
cout<<"enter number of rows and columns: ";
cin>>m>>n;
  Matrix obj (m,n);
  cout<<"default matrix is: "<<endl;
  obj.display();
  cout<<"enter elements of matrix\n";
  obj.set_matrix();
  cout<<"matrix you entered is: \n";
  obj.display();
  return 0;
}
