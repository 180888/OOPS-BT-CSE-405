/*
To add two numbers using function
*/

#include <iostream>

using namespace std;

class Sum
{
    int num1,num2,sum;
    public:
    Sum(int a,int b)
    {
        num1=a;
        num2=b;
    }
    void add()
    {
        sum =num1+num2;
    }
    void display()
    {
        cout<<"sum of number "<<num1<<" and " <<num2<<" is: "<<sum;
    }
};
int main()
{   int a,b;
    cout<<"enter numbers to be added: ";
    cin>>a>>b;
    Sum obj(a,b);
    obj.add();
    obj.display();
    return 0;
}
